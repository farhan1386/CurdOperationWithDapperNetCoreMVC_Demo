@model CurdOperationWithDapperNetCoreMVC_Demo.Models.ProductModel

@{
    ViewData["Title"] = "Create";
}

<div class="card rounded-0">
    <div class="card-header">
        <h4>Add New Product</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdcutDescription" class="control-label"></label>
                <textarea asp-for="ProdcutDescription" class="form-control"></textarea>
                <span asp-validation-for="ProdcutDescription" class="text-danger"></span>
            </div>
            <div class="form-group" style=" float:right; margin-top:10px">
                <input type="submit" value="Save" class="btn btn-primary rounded-0" />
                <a href="@Url.Action("Index", "Products")" class="btn btn-md btn-primary rounded-0"><i class="fa-solid fa-backward"></i> Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
