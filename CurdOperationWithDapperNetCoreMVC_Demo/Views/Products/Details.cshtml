@model CurdOperationWithDapperNetCoreMVC_Demo.Models.ProductModel

@{
    ViewData["Title"] = "Details";
}

<div class="card rounded-0">
    <div class="card-header">
        <h4>Product Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProdcutDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProdcutDescription)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <div style="float:right">
            <a href="@Url.Action("Edit", "Products", new { id = Model.ProductId })" class="btn btn-md btn-info rounded-0"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
            <a href="@Url.Action("Index", "Products")" class="btn btn-md btn-primary rounded-0"><i class="fa-solid fa-backward"></i> Back to list</a>
        </div>
    </div>
</div>