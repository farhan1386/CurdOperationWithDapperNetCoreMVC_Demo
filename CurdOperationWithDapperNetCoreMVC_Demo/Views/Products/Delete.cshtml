@model CurdOperationWithDapperNetCoreMVC_Demo.Models.ProductModel

@{
    ViewData["Title"] = "Delete";
}

<div class="card rounded-0">
    <div class="card-header">
        <h4>Delete Product</h4>
    </div>
    <div class="card-body">
        <h3 class="alert alert-danger">Are you sure you want to delete this?</h3>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProdcutDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProdcutDescription)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <div style="float:right">
            <form asp-action="Delete">
                <button type="submit" class="btn btn-md btn-danger rounded-0"><i class="fa-solid fa-trash"></i> Delete</button>
                <a href="@Url.Action("Index", "Products")" class="btn btn-md btn-primary rounded-0"><i class="fa-solid fa-backward"></i> Back to list</a>
            </form>
        </div>
    </div>
</div>